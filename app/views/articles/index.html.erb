<%= render  "shared/notice" %>
<div class="container-fluid p-0">
    <div class="main-article w-100 mx-0 ">
        <%= link_to(image_tag(@main_article.image_url), article_path(@main_article), class: "w-100")if @main_article&.image %>
        <div class="main-article-description">
            <div class="title">
                <%= @main_article&.title%>
            </div>
            <div class="body">
                <%= @main_article&.body&.truncate(100)%>
            </div>
        </div>

    </div>
    <div class="categories row w-100 m-0">
        <% @categories.each do |category| %>
        <div class="category-container col-6 col-lg-3 p-0">
            <div class="category-image">
                <%= category_main_image(category) %>
            </div>
            <div class="category_name">
                <p><%= category.name%></p>
            </div>
            <div class="category-article-title">
                <p><%= category.articles.last.title%></p>
            </div>
        </div>
        <%end%>
    </div>

</div>